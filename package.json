{
	"name": "nextjs-boilerplate",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "next dev",
		"build": "next build --no-lint",
		"start": "next start",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:html": "playwright test ; playwright show-report e2e/results/html-report",
		"lint": "next lint --fix --max-warnings 0",
		"format": "prettier . --write",
		"prepare": "husky install",
		"shadcn-add": "npx shadcn-ui@latest add",
		"check-updates": "bunx npm-check-updates -i --color"
	},
	"browserslist": [
		"chrome 64",
		"edge 79",
		"firefox 67",
		"opera 51",
		"safari 12"
	],
	"packageManager": "bun@1.0.21",
	"dependencies": {
		"@hookform/resolvers": "^3.3.4",
		"@radix-ui/react-dialog": "^1.0.5",
		"@radix-ui/react-dropdown-menu": "^2.0.6",
		"@radix-ui/react-label": "^2.0.2",
		"@radix-ui/react-scroll-area": "^1.0.5",
		"@radix-ui/react-select": "^2.0.0",
		"@radix-ui/react-slot": "^1.0.2",
		"@radix-ui/react-toast": "^1.1.5",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.0",
		"date-fns": "^3.3.1",
		"framer-motion": "^11.0.3",
		"jotai": "^2.6.4",
		"lucide-react": "^0.321.0",
		"next": "canary",
		"react": "^18",
		"react-dom": "^18",
		"react-hook-form": "^7.50.0",
		"tailwind-merge": "^2.2.1",
		"tailwindcss": "^3.4.1",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@playwright/test": "latest",
		"@swc-jotai/react-refresh": "^0.1.0",
		"@testing-library/react": "^14.2.1",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@vitejs/plugin-react": "^4.2.1",
		"@vitest/ui": "^1.2.2",
		"autoprefixer": "^10.4.17",
		"critters": "^0.0.20",
